{
    "name": "diatigrah/php-nginx-baseproject",
    "license": "MIT",
    "type": "project",
    "description": "Diatigrah base project PHP and nginx using Docker",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "require": {
        "php": ">=5.3.3"
    },
    "require-dev": {
        "behat/behat": "~3.0",
        "behat/mink": "1.5",
        "behat/mink-extension": "~2.0",
        "behat/mink-browserkit-driver": "~1.1",
        "behat/mink-goutte-driver": "*",
        "behat/mink-selenium2-driver": "*",
        "ocramius/proxy-manager": "~0.5",
        "phpspec/phpspec": "~2.0",
        "bossa/phpspec2-expect": "~1.0",
        "sensiolabs/behat-page-object-extension": "2.0.*@dev",
        "squizlabs/php_codesniffer": "1.*",
        "phpmd/phpmd": "2.*"
    },
    "config": {
        "bin-dir": "bin"
    }
}
